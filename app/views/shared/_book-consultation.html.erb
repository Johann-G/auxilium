<div class='mt-3 mb-3'>
  <h1>Fixer un rendez-vous</h1>
</div>
<div>
  <%= simple_form_for [ @patient, @new_consultation ] do |f| %>
  <div class='row'>
    <div class='col-6'>
    <%= f.input :title, label: false, placeholder: 'Motif du rendez-vous', id: 'motif' %>
    <%= f.input :date, label: false, class: 'date-motif' %>
    <%= f.submit "Planifier un rendez-vous", class: "btn btn-warning text-white", id: 'btn-motif' %>
    </div>
  </div>
<% end %>
</div>
