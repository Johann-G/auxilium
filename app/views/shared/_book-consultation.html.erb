<div class='mt-3 mb-3'>
  <h1>Fixer un rendez-vous</h1>
</div>
<div class='w-50'>
  <%= simple_form_for [ @patient, @new_consultation ] do |f| %>
    <%= f.input :date, label: false, class: 'date-motif' %>
    <div class='form-inline'>
      <div class='form-group w-75'>
        <%= f.input :title, label: false, placeholder: 'Motif du rendez-vous', class: 'w-100', id: 'motif' %>
      </div>
      <div class='form-group w-25'>
        <%= f.submit "Planifier", class: "btn text-white font-weight-bold ml-2", id: 'btn-motif' %> </strong>
      </div>
    </div>
<% end %>
</div>

