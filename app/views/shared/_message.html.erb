<% if message.messageable_type == "Doctor"  %>
  <div class="message-container card col-11 d-flex justify-content-center mt-3" style="height: auto; background-color: #AABAD9; border-radius: 8px; border: none;" id="message-<%= message.id %>">
    <div>
      <% doctor_signed_in? ? doctor = current_doctor : doctor = @doctor %>
      <span class="font-weight-bold"><%= doctor.email %></span>
      <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      <p><%= message.content %></p>
    </div>
  </div>
<% else %>
  <div class="message-container card col-11 d-flex justify-content-center mt-3" style="height: auto; background-color: #eddbd8; border-radius: 8px; border: none;" id="message-<%= message.id %>">
    <div>
        <% patient_signed_in? ? patient = current_patient : patient = @patient %>
        <span class="font-weight-bold"><%= patient.full_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      <p><%= message.content %></p>
    </div>
  </div>
<% end %>