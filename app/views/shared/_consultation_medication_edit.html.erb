<div class="container" style="margin-top: 70px;">

  <div class="row mb-5 align-items-center ">
    <div class="col-2">
      <%= link_to doctor_consultation_path(consultation) do %>
        <i class="fas fa-chevron-circle-left fa-2x mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h6 class="card-text font-weight-bold text-center mb-2">Edit prescription</h6>
    </div>
  </div>

  <div class="row justify-content-between border-bottom mt-5">
    <div class="ml-3">
      <h6 class="font-weight-bold"><%= "Consultation - #{consultation.calendar_date} " %></h6>
    </div>
  </div>

  <div class="mt-5">
    <%= simple_form_for [ consultation, consultation_medication ], url: consultation_medication.id.present? ? doctor_consultation_medication_path(consultation_medication) : doctor_consultation_consultation_medications_path(consultation) do |f| %>
      <div class="field">
        <%= f.label :medication_id, 'Drug', class: "font-weight-bold" %><br />
        <%= f.input :medication_id, collection: medications, label: false, autofocus: true, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :quantity, 'Quantity', class: "font-weight-bold" %><br />
        <%= f.input :quantity, label: false, autofocus: true, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :description, 'Description', class: "font-weight-bold" %><br />
        <%= f.input :description, as: :text, label: false, autofocus: true, class: 'form-control'%>
      </div>
      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary", style: "width: 100%;" %>
      </div>
    <% end %>
  </div>

</div>