<div class="container" style="margin-top: 70px;">

  <div class="row mb-5">
    <div class="col-2">
      <% doctor_signed_in? ? path = doctor_patient_path(@patient) : path = dashboard_path %>
      <%= link_to path do %>
        <i class="fas fa-chevron-circle-left fa-3x mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h1 class="card-text font-weight-bold text-center mb-2">Video</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <% if doctor_signed_in? %>
      <% if @videoroom.url.present? %>
        <a href=<%= @videoroom.url %> target="_blank">
          <p class="mt-3 btn btn-primary" style="color: white;">New call<i class="fas fa-phone-volume ml-3" style="color: white;"></i></p>
        </a>
      <% else %>
        <a href="https://apps.google.com/meet/" target="_blank">
          <p class="mt-3 btn btn-primary" style="color: white;">New call<i class="fas fa-phone-volume ml-3" style="color: white;"></i></p>
        </a>
      <% end %>
    <% else %>
      <% if @videoroom.url.present? %>
        <a href=<%= @videoroom.url %> target="_blank">
          <p class="card-text mt-3 font-weight-bold text-center" style="color: white;">New call<i class="fas fa-phone-volume ml-3" style="color: white;"></i></p>
        </a>
      <% else %>
        <p class="card-text mt-3 font-weight-bold text-center" style="color: white;">No call scheduled<i class="fas fa-phone-volume ml-3" style="color: white;"></i></p>
      <% end %>
    <% end %>
  </div>

  <div class="row justify-content-center mt-5">
    <% if doctor_signed_in? && !@videoroom.url.present? %>
      <%= simple_form_for [ @videoroom ], url: doctor_videoroom_path(@videoroom) do |f| %>
        <%= f.input :url, as: :text, label: false %>
        <%= f.submit "Send Video Call URL", class: "btn btn-primary mt-2 mb-3", style: "width: 100%;" %>
      <% end %>
    <% end %>
  </div>

  <br>
  <br>
  <br>

</div>