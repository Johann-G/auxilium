<div class="container" style="margin-top: 70px;">

  <div class="row mb-5 align-items-center ">
    <div class="col-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left fa-2x mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h6 class="card-text font-weight-bold text-center mb-2">Index</h6>
    </div>
  </div>

  <div class="row justify-content-between border-bottom pb-3">
    <div class="align-self-end ml-3">
      <h6 class="font-weight-bold">Patients<i class="ml-3 fas fa-user-friends"></i></h6>
    </div>
    <div class="justiy-content-end mr-3">
      <%= link_to new_doctor_patient_path do %>
        <button class="btn btn-primary" style="background-color: #ff8800; border: none;">Add patient <i class="ml-2 fas fa-plus"></i></button>
      <% end %>
    </div>
  </div>

  <% @patients.each do |patient| %>
    <div class="container mt-3 border-bottom">
      <div class="row align-items-start pb-3">
        <div class="col-2">
          <% patient.active? ? badge_color = "green" : badge_color = "red" %>
          <span class="badge badge-primary badge-pill" style="background-color: <%= badge_color %>;"><%= patient.active? ? "active" : "draft" %></span>
        </div>
        <div class="col-8 col-sm-9">
          <p class="font-weight-bold ml-3"><%= patient.full_name %></p>
          <p><i class="fas fa-notes-medical mr-3  ml-3"></i><%= patient.avs_number %></p>
        </div>
        <div class="col-2 col-sm-1">
          <div>
            <%= link_to doctor_patient_path(patient) do %>
              <button class="btn btn-primary"><i class="fas fa-search"></i></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>






</div>


