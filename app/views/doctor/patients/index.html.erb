<div class="container" style="margin-top: 70px;">

    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-2">
        <%= link_to root_path do %>
          <i class="fas fa-chevron-circle-left fa-3x mt-3" style="color: #395579; text-decoration: none;"></i>
        <% end %>
      </div>
      <div class="col-8 mt-3">
        <h2 class="card-text font-weight-bold text-center mb-2">My patients</h2>
      </div>
      <div class="col-2">
        <%= link_to new_doctor_patient_path do %>
          <i class="fas fa-user-plus fa-2x mt-3" style="color: #395579; text-decoration: none;"></i>
        <% end %>
      </div>
    </div>


    <ul class="list-group mt-5">
      <% @patients.each do |patient| %>
        <%= link_to doctor_patient_path(patient) do %>
          <li class="list-group-item"><%= patient.full_name %></li>
        <% end %>
      <% end %>
    </ul>

</div>


