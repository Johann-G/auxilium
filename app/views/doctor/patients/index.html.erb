<div class="container" style="margin-top: 70px;">

  <div class="row mb-5">
    <div class="col-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left fa-2x mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h6 class="card-text font-weight-bold text-center mb-2">Index</h6>
    </div>
  </div>

  <div class="row justify-content-between border-bottom pb-3">
    <div class="align-self-end ml-3">
      <h6 class="font-weight-bold">Patients</h6>
    </div>
    <div class="justiy-content-end mr-3">
      <%= link_to new_doctor_patient_path do %>
        <button class="btn btn-primary">Add patient</button>
      <% end %>
    </div>
  </div>

  <% @patients.each do |patient| %>
    <div class="container mt-3 border-bottom">
      <div class="row">
        <div class="col-4">
          <%= link_to doctor_patient_path(patient) do %>
            <span class="badge badge-primary badge-pill"">DETAIL</span>
          <% end %>
        </div>
        <div class="col-8">
          <p class="font-weight-bold"><%= patient.full_name %></p>
        </div>
      </div>
    </div>
  <% end %>






</div>


