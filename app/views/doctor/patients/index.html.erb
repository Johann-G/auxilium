<div class="container" style="margin-top: 70px;">

  <div class="row mb-5">
    <div class="col-2">
      <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left fa-3x mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h1 class="card-text font-weight-bold text-center mb-2">Index</h1>
    </div>
  </div>

  <h2 class="row justify-content-center font-weight-bold text-center">Patients</h2>

  <%= link_to new_doctor_patient_path do %>
    <i class="fa fa-plus-circle fa-2x mt-3"></i>
  <% end %>

  <ul class="list-group mt-2">
    <% @patients.each do |patient| %>
      <%= link_to doctor_patient_path(patient) do %>
        <li class="list-group-item"><%= patient.full_name %></li>
      <% end %>
    <% end %>
  </ul>



</div>


