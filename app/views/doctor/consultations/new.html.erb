<div class="container" style="margin-top: 70px;">

  <div class="row mb-5">
    <div class="col-2">
      <%= link_to doctor_patient_path(@patient) do %>
        <i class="fas fa-chevron-circle-left mt-3 mb-3" style="color: #395579;"></i>
      <% end %>
    </div>
    <div class="col-8 mt-3">
      <h6 class="card-text font-weight-bold text-center mb-2">New consultation</h6>
    </div>
  </div>

  <div class="mt-5 pt-5 row d-flex justify-content-center">
    <%= simple_form_for [ @patient, @consultation ], url: doctor_patient_consultations_path(@patient)do |f| %>
      <%= f.input :date, label: false, html5: true, class: "ml-3" %>
      <%= f.submit "Book", class: "btn btn-primary mt-5", style: "width: 100%;" %>
    <% end %>
  </div>

</div>